@model List<Cars>

<section class="section featured-car" id="featured-car">
    <div class="container">

        <div class="title-wrapper">
            <h2 class="h2 section-title">Featured cars</h2>

            <a href="#" class="featured-car-link">
                <span>View more</span>

                <ion-icon name="arrow-forward-outline"></ion-icon>
            </a>
        </div>

        <ul class="featured-car-list">

            @foreach (var obj in Model)
            {
                <li>
                    <div class="featured-car-card">

                        <figure class="card-banner">
                            <img src="/images/@obj.ImageUrl" alt="@obj.Model" loading="lazy" width="440" height="300"
                                 class="w-100">
                        </figure>

                        <div class="card-content">

                            <div class="card-title-wrapper">
                                <h3 class="h3 card-title">
                                    <a href="#">@obj.Model</a>
                                </h3>

                                <data class="year" value="@obj.MakeYear">@obj.MakeYear</data>
                            </div>

                            <ul class="card-list">

                                <li class="card-list-item">
                                    <ion-icon name="people-outline"></ion-icon>

                                    <span class="card-item-text">@obj.Seaters People</span>
                                </li>

                                <li class="card-list-item">
                                    <ion-icon name="flash-outline"></ion-icon>

                                    <span class="card-item-text">@obj.FuelType</span>
                                </li>

                                <li class="card-list-item">
                                    <ion-icon name="speedometer-outline"></ion-icon>

                                    <span class="card-item-text">@obj.Mileage km / litre</span>
                                </li>

                                <li class="card-list-item">
                                    <ion-icon name="hardware-chip-outline"></ion-icon>

                                    <span class="card-item-text">@obj.Transmission</span>
                                </li>

                            </ul>

                            <div class="card-price-wrapper">

                                <p class="card-price">
                                    <strong>₹@obj.RentPerDay</strong> / day
                                </p>

                                <button class="btn">Rent now</button>

                            </div>

                        </div>

                    </div>
                </li>
            }

        </ul>

    </div>
</section>